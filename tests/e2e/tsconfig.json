{
	"compilerOptions": {
		"skipLibCheck": true,
		"target": "es2021",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"lib": ["es2021", "dom"],
		"types": ["reflect-metadata", "@types/mocha", "@types/node"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noImplicitReturns": false,
		"sourceMap": true
	},
	"include": [".eslintrc.js", "**/*.ts", "**/**/*.ts", "**/reporters.config.js"]
}
